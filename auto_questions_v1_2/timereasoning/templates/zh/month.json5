    // 时频的模板
    "freq": [
        "从[time]月到同年[endtime]月，每[frequency]个月他都[element]一次",
        "从[time]月开始的[duration]个月间，每[frequency]个月他都[element]一次",
        "他在[endtime]月之前的[duration]个月里每[frequency]个月都[element]一次",
