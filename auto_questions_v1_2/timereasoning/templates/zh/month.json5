    "during": [
        "在[element2]期间，他[element1]",
        "他在[element2]期间[element1]",
        "他在[element2]的时候[element1]",
        "他[element1]的时候是在[element2]期间",
        "他在[element2]的那段时间里[element1]",
        "他[element1]的时间是在[element2]期间",
