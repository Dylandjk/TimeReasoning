// 占位符与相应命题的属性对应

{
    // 瞬时事件的模板
    "temporal": [
        "他[element]，那是在[time]月",
        "在[time]月，他[element]",
        "他在[time]月[element]",
        "他[element]的时候是在[time]月",
    ],
    // 时长的模板
    "duration": [
