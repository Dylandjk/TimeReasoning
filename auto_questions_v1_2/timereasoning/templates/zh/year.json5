// 以年为单位的命题陈述模板
// 模板中存在占位符，格式为"[占位符名]"，如"[element]"、"[time]"等
// 占位符与相应命题的属性对应

{
    // 瞬时事件的模板
    "temporal": [
        "他[element]，那是在[time]年",
        "在[time]年，他[element]",
        "他在[time]年[element]",
        "他[element]的时候是在[time]年",
    ],
    // 时长的模板
    "duration": [
        // "他[element]的时间长达[duration]年",
        // "他[element]有[duration]年之久",
        // "他[element]的时间达到了[duration]年",
        "他[element]的时间是[duration]年",
        "他[element]的时间一共[duration]年",
        // "他[element]整整[duration]年",
    ],
    // 持续事件的模板
    "durative": [
        // 描述起点和终点
        "从[time]年到[endtime]年，他[element]",
        "他自[time]年起[element]，直到[endtime]年结束",
        "他从[time]年开始[element]，一直持续到[endtime]年",
        "他自[time]年起到[endtime]年止[element]",
        // "[time]年至[endtime]年，他曾[element]",
        // 描述起点和持续时间
        "从[time]年开始的[duration]年间，他[element]",
        "自[time]年起，他一直[element]，直到[duration]年后",
        "从[time]年开始，他[element]，时间长达[duration]年",
        // 描述终点和持续时间
        "他在[endtime]年之前的[duration]年里一直[element]",
        "直至[endtime]年，他已连续[duration]年[element]",
        "他在[endtime]年之前[element][duration]年",
    ],
    // 时频的模板
    "freq": [
        "从[time]年到[endtime]年，每[frequency]年他都[element]一次",
        "从[time]年开始的[duration]年间，每[frequency]年他都[element]一次",
        "他在[endtime]年之前的[duration]年里每[frequency]年都[element]一次",
    ],
    // 事件先后关系的模板
    "before": [
        "[element1]的时间比[element2]早",
        "[element1]是在[element2]之前发生的",
        "[element1]在[element2]之前",
    ],
    "before_time": [
        "[element1]的时间比[element2]早了[diff]年", 
        // "在[element2]之前[diff]年，曾[element1]", 
        "在[element2]的[diff]年之前[element1]", 
        "[element1]是在[element2]的[diff]年前", 
        "[element1]是在[element2]之前的第[diff]年发生的",
    ],
    "after": [
        "[element1]的时间比[element2]晚",
        "[element1]是在[element2]之后发生的",
        "[element1]在[element2]之后",
    ],
    "after_time": [
        "[element1]的时间比[element2]晚了[diff]年",
        "在[element2]之后[diff]年，[element1]",
        "在[element2]的[diff]年之后[element1]",
        "[element1]是在[element2]的[diff]年后",
        "[element1]是在[element2]之后的第[diff]年发生的",
    ],
    "simultaneous": [
        "在[element2]的那一年，[element1]",
        "某一年，不仅[element2]，还[element1]",
        "某一年，既[element2]，又[element1]",
        "在[element2]的同一年，[element1]",
        "某一年，[element2]和[element1]都发生",
    ],
    // 事件间隔的模板
    "gap_time": [
        "[element2]和[element1]之间相隔[diff]年",
        "[element2]和[element1]之间的时间间隔是[diff]年",
        "[element2]和[element1]中间差了[diff]年",
    ],
    // 时长关系的模板
    "long": [
        "[element1]的时间比[element2]的时间长",
        "[element1]的总时长比[element2]的总时长多",
        "相比[element2]，[element1]用了更多时间",
        "[element1]比[element2]用时更久",
    ],
    "long_time": [
        "[element1]的时间比[element2]的时间长了[diff]年",
        "[element1]的总时长比[element2]的总时长多了[diff]年", 
        "[element1]用了比[element2]多[diff]年的时间",
    ],
    "short": [
        "[element1]的时间比[element2]的时间短",
        "[element1]的总时长比[element2]的总时长少",
        "相比[element2]，[element1]用了更少时间",
        "[element1]比[element2]用时更短",
    ],
    "short_time": [
        "[element1]的时间比[element2]的时间短了[diff]年",
        "[element1]的总时长比[element2]的总时长少了[diff]年", 
        "[element1]用了比[element2]少[diff]年的时间",
    ],
    "same_len": [
        "[element1]的年数和[element2]的年数一样",
        "[element1]的时间和[element2]的时间一样长",
        "[element1]的时间与[element2]所花的时间相同",
        "[element1]花费的时间和[element2]花费的时间相等",
        "[element1]的时长与[element2]的时长一致",
        "[element1]和[element2]用了相同的时间",
    ],
    // 增加：during的模板
    "during": [
        "在[element2]期间，也[element1]",
        "[element1]是在[element2]期间",
        "在[element2]的那段时间里，[element1]",
    ], 
}