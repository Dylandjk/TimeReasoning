// 本文件是模板文件的示例
// 使用者可以参照格式自行编写不同scale的模板文件
// 列表中的所有元素都是带有占位符的字符串
{
    // 对瞬时事件的表述
    "temporal_event": [],
    // 对事件的持续时间的表述
    "duration": [],
    // 对持续事件的表述
    "lasting_event": [],
    // 两个瞬时事件之间的关系的表述
    "temporal_relation": {
        // 事件1在事件2之前
        "before": [],
        // 事件1在事件2之后
        "after": [],
        // 事件1与事件2同时发生
        "simultaneous": [],
    },
    // 两个持续事件的持续时间关系的自然文本描述
    "duration_relation": {
        // 事件1的持续时间比事件2的持续时间短
        "shorter": [],
        // 事件1的持续时间比事件2的持续时间长
        "longer": [],
        // 事件1的持续时间与事件2的持续时间相等
        "equal": [],
        // 事件1的持续时间与事件2的持续时间之间有倍数关系
        "times": [],
        // 事件1的持续时间与事件2的持续时间之间有比例关系
        "ratio": [],
    },
    // 用于连接两个事件的表述的语言片段
    "link": [],
}